<?xml version="1.0" encoding="utf-8"?>
<queries>
  <!-- Example SQL queries for the Barbershop backend -->

  <query id="GetAllShops">
    <sql>
      SELECT id, name, address, language, created_at, updated_at
      FROM shops;
    </sql>
  </query>

  <query id="GetBarbersByShopId">
    <sql>
      SELECT 
        "Id", 
        "Name", 
        "ShopId"
      FROM 
        "Barbers"
      WHERE 
        "ShopId" = @ShopId;
    </sql>
  </query>
</queries>

